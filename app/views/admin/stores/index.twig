{% extends 'base.twig' %}

{% block title %}{{ title }} â€” Admin{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-800">{{ title }}</h1>
        <a href="{{ app_url }}/admin/stores/create" class="bg-black text-white px-4 py-2 rounded hover:bg-gray-800 transition">
            + Add Store
        </a>
    </div>

    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-50 border-b">
                    <th class="p-4 font-semibold text-gray-600">Code</th>
                    <th class="p-4 font-semibold text-gray-600">Name</th>
                    <th class="p-4 font-semibold text-gray-600">City</th>
                    <th class="p-4 font-semibold text-gray-600">State</th>
                    <th class="p-4 font-semibold text-gray-600">Status</th>
                    <th class="p-4 font-semibold text-gray-600 text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for store in stores %}
                <tr class="border-b hover:bg-gray-50">
                    <td class="p-4">{{ store.code }}</td>
                    <td class="p-4 font-medium text-gray-900">{{ store.name }}</td>
                    <td class="p-4 text-gray-600">{{ store.city }}</td>
                    <td class="p-4 text-gray-600">{{ store.state }}</td>
                    <td class="p-4">
                        {% if store.is_active %}
                            <span class="inline-block px-2 py-1 text-xs font-semibold text-green-700 bg-green-100 rounded-full">
                                Active
                            </span>
                        {% else %}
                            <span class="inline-block px-2 py-1 text-xs font-semibold text-red-700 bg-red-100 rounded-full">
                                Inactive
                            </span>
                        {% endif %}
                    </td>
                    <td class="p-4 text-right space-x-2">
                        <form action="{{ app_url }}/admin/stores/{{ store.id }}/toggle" method="POST" class="inline" onsubmit="return confirm('Change status?');">
                            <input type="hidden" name="_token" value="{{ csrf_token }}">
                            <button type="submit" class="text-sm text-blue-600 hover:underline">
                                {{ store.is_active ? 'Disable' : 'Enable' }}
                            </button>
                        </form>
                        <a href="{{ app_url }}/admin/stores/{{ store.id }}/edit" class="text-sm text-gray-600 hover:text-black">
                            Edit
                        </a>
                        <form action="{{ app_url }}/admin/stores/{{ store.id }}/delete" method="POST" class="inline" onsubmit="return confirm('Are you sure? This might affect stock and orders!');">
                            <input type="hidden" name="_token" value="{{ csrf_token }}">
                            <button type="submit" class="text-sm text-red-600 hover:text-red-800">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="p-8 text-center text-gray-500">
                        No stores found.
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
