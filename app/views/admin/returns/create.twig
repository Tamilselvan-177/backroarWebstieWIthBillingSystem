{% extends "base.twig" %}
{% block title %}Process Return{% endblock %}
{% block content %}
<section class="py-8 bg-gray-50 min-h-screen">
  <div class="container mx-auto px-4 max-w-5xl">
    
    <!-- Search by Bill Number -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
      <h2 class="text-lg font-semibold mb-4">Search Order by Bill Number</h2>
      <div class="flex gap-3">
        <input 
          type="text" 
          id="billSearch" 
          placeholder="Enter bill/order number" 
          class="flex-1 px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
        >
        <button 
          onclick="searchBill()" 
          class="px-6 py-3 bg-black text-white rounded-xl hover:bg-gray-800 transition font-medium"
        >
          Search
        </button>
      </div>
      <div id="searchMessage" class="mt-3 text-sm"></div>
    </div>

    <!-- Order Items Display -->
    <div id="orderItems" class="hidden bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold">Order Items</h2>
        <span id="orderInfo" class="text-sm text-gray-600"></span>
      </div>
      <div id="itemsList" class="space-y-3"></div>
    </div>

    <!-- Manual Return Form -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
      <h1 class="text-lg font-semibold mb-6">Manual Return Entry</h1>
      <form method="post" action="{{ app_url }}/admin/returns" id="returnForm">
        <input type="hidden" name="_token" value="{{ csrf_token }}">
        <input type="hidden" name="pos_order_id" id="pos_order_id" value="{{ old.pos_order_id }}">
        <input type="hidden" name="pos_order_item_id" id="pos_order_item_id" value="{{ old.pos_order_item_id }}">
        <input type="hidden" name="order_id" id="order_id" value="{{ old.order_id }}">
        <input type="hidden" name="order_item_id" id="order_item_id" value="{{ old.order_item_id }}">
        
        <div class="space-y-4">
          <!-- Store & Product -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Store</label>
              <select 
                name="store_id" 
                id="store_id"
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
              >
                <option value="">Select Store</option>
                {% for s in stores %}
                  <option value="{{ s.id }}" {% if old.store_id == s.id %}selected{% endif %}>
                    {{ s.code }} — {{ s.name }}
                  </option>
                {% endfor %}
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Product ID</label>
              <input 
                type="number" 
                name="product_id" 
                id="product_id"
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent" 
                placeholder="Enter product ID" 
                value="{{ old.product_id }}"
              >
            </div>
          </div>

          <!-- Quantity & Refund Method -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Quantity</label>
              <input 
                type="number" 
                name="quantity" 
                id="quantity"
                min="1"
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent" 
                value="{{ old.quantity }}"
              >
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Refund Method</label>
              <select 
                name="refund_method"
                id="refund_method" 
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
              >
                <option value="Cash" {% if old.refund_method == 'Cash' %}selected{% endif %}>Cash</option>
                <option value="Card" {% if old.refund_method == 'Card' %}selected{% endif %}>Card</option>
                <option value="UPI" {% if old.refund_method == 'UPI' %}selected{% endif %}>UPI</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Refund Amount</label>
              <input 
                type="number" 
                step="0.01" 
                name="refund_amount"
                id="refund_amount" 
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent" 
                value="{{ old.refund_amount }}"
              >
            </div>
          </div>

          <!-- GST & Reason -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">GST Adjustment</label>
              <input 
                type="number" 
                step="0.01" 
                name="gst_adjustment"
                id="gst_adjustment" 
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent" 
                value="{{ old.gst_adjustment }}"
              >
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Reason (Optional)</label>
              <input 
                type="text" 
                name="reason" 
                id="reason"
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent" 
                placeholder="e.g., Defective, Changed mind" 
                value="{{ old.reason }}"
              >
            </div>
          </div>

          <!-- Buttons -->
          <div class="flex gap-3 pt-4">
            <button 
              type="submit" 
              class="px-6 py-3 bg-black text-white rounded-xl hover:bg-gray-800 transition font-medium"
            >
              Process Return
            </button>
            <a 
              href="{{ app_url }}/admin" 
              class="px-6 py-3 border border-gray-300 text-gray-700 rounded-xl hover:bg-gray-50 transition font-medium"
            >
              Cancel
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<script>
async function searchBill() {
  const billNumber = document.getElementById('billSearch').value.trim();
  const msgEl = document.getElementById('searchMessage');
  const itemsDiv = document.getElementById('orderItems');
  
  if (!billNumber) {
    msgEl.innerHTML = '<span class="text-red-600">Please enter a bill number</span>';
    return;
  }
  
  msgEl.innerHTML = '<span class="text-gray-600">Searching...</span>';
  
  try {
    const response = await fetch(`{{ app_url }}/admin/returns/search?bill_number=${encodeURIComponent(billNumber)}`);
    const data = await response.json();
    
    if (data.success) {
      msgEl.innerHTML = '<span class="text-green-600">✓ Order found</span>';
      displayOrderItems(data);
      itemsDiv.classList.remove('hidden');
    } else {
      msgEl.innerHTML = `<span class="text-red-600">${data.message}</span>`;
      itemsDiv.classList.add('hidden');
    }
  } catch (error) {
    msgEl.innerHTML = '<span class="text-red-600">Error searching order</span>';
    itemsDiv.classList.add('hidden');
  }
}

function displayOrderItems(data) {
  const infoEl = document.getElementById('orderInfo');
  const listEl = document.getElementById('itemsList');
  
  infoEl.textContent = `Bill: ${data.order.order_number} | Date: ${new Date(data.order.created_at).toLocaleDateString()}`;
  
  listEl.innerHTML = data.items.map(item => `
    <div class="flex items-center gap-4 p-4 border border-gray-200 rounded-xl hover:shadow-sm transition">
      <div class="w-20 h-20 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
        ${item.image_path ? 
          `<img src="{{ app_url }}/${item.image_path}" alt="${item.product_name}" class="w-full h-full object-cover">` :
          `<div class="w-full h-full flex items-center justify-center text-gray-400 text-xs">No image</div>`
        }
      </div>
      <div class="flex-1 min-w-0">
        <h3 class="font-medium text-gray-900 truncate">${item.product_name}</h3>
        <p class="text-sm text-gray-500 mt-1">SKU: ${item.sku || 'N/A'}</p>
        <div class="flex gap-4 mt-2 text-sm">
          <span class="text-gray-600">Qty: ${item.quantity}</span>
          <span class="text-gray-600">Returned: ${item.returned_qty}</span>
          <span class="text-green-600 font-medium">Available: ${item.remaining_qty}</span>
          <span class="text-gray-900 font-medium">₹${parseFloat(item.line_total || item.subtotal).toFixed(2)}</span>
        </div>
      </div>
      ${item.remaining_qty > 0 ? `
        <button 
          onclick="fillReturnForm(${JSON.stringify(item).replace(/"/g, '&quot;')}, '${data.type}', ${data.order.id}, ${data.order.store_id || 0})" 
          class="px-4 py-2 bg-black text-white text-sm rounded-lg hover:bg-gray-800 transition whitespace-nowrap"
        >
          Return Item
        </button>
      ` : `
        <span class="px-4 py-2 bg-gray-100 text-gray-500 text-sm rounded-lg whitespace-nowrap">
          Fully Returned
        </span>
      `}
    </div>
  `).join('');
}

function fillReturnForm(item, orderType, orderId, storeId) {
  // Fill hidden fields
  if (orderType === 'pos') {
    document.getElementById('pos_order_id').value = orderId;
    document.getElementById('pos_order_item_id').value = item.id;
    document.getElementById('order_id').value = '';
    document.getElementById('order_item_id').value = '';
  } else {
    document.getElementById('order_id').value = orderId;
    document.getElementById('order_item_id').value = item.id;
    document.getElementById('pos_order_id').value = '';
    document.getElementById('pos_order_item_id').value = '';
  }
  
  // Fill form fields
  document.getElementById('store_id').value = storeId;
  document.getElementById('product_id').value = item.product_id;
  document.getElementById('quantity').value = item.remaining_qty;
  document.getElementById('refund_amount').value = (parseFloat(item.line_total || item.subtotal) / item.quantity * item.remaining_qty).toFixed(2);
  document.getElementById('gst_adjustment').value = item.gst_amount ? (parseFloat(item.gst_amount) / item.quantity * item.remaining_qty).toFixed(2) : '0.00';
  
  // Scroll to form
  document.getElementById('returnForm').scrollIntoView({ behavior: 'smooth', block: 'center' });
}

// Allow Enter key to search
document.getElementById('billSearch')?.addEventListener('keypress', (e) => {
  if (e.key === 'Enter') {
    e.preventDefault();
    searchBill();
  }
});
</script>
{% endblock %}