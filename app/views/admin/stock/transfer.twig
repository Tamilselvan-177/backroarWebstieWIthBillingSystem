{% extends "base.twig" %}
{% block title %}Stock Transfer ‚Äî Admin{% endblock %}
{% block content %}
<section class="min-h-screen bg-gray-50 py-8">
  <div class="container mx-auto px-4 max-w-7xl">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-8 gap-4">
      <div class="flex items-start gap-4">
        <a href="{{ app_url }}/admin"
           class="inline-flex items-center px-4 py-2.5 rounded-lg border-2 border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 hover:border-gray-400 transition-all mt-1">
          ‚Üê Dashboard
        </a>
        <div>
          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">
            Admin / Stock Management
          </p>
          <h1 class="text-3xl font-bold text-gray-900 mb-1">
            üîÑ Stock Transfer
          </h1>
          <p class="text-sm text-gray-600">Transfer inventory between store locations</p>
        </div>
      </div>
      <a href="{{ app_url }}/admin/stock/transfer/history"
         class="inline-flex items-center px-4 py-2.5 rounded-lg bg-gray-900 text-white text-sm font-medium hover:bg-gray-800 transition-all">
        üìã Transfer History
      </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Search & Filter Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h2 class="text-base font-bold text-gray-900 mb-4 flex items-center gap-2">
            üîç Find Product
          </h2>
          <form method="get" id="filterForm">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <!-- Source Shop -->
              <div class="md:col-span-2">
                <label class="block text-xs font-bold text-gray-700 mb-2 uppercase tracking-wide">
                  üè™ Source Shop
                </label>
                <select name="source_id" 
                        id="sourceSel"
                        class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 bg-white text-sm font-medium text-gray-900 focus:border-black focus:ring-2 focus:ring-black focus:ring-opacity-10 transition-all outline-none">
                  <option value="">Select source shop...</option>
                  {% for s in stores %}
                    <option value="{{ s.id }}" {% if s.id == source_id %}selected{% endif %}>
                      {{ s.name }}
                    </option>
                  {% endfor %}
                </select>
              </div>

              <!-- Barcode -->
              <div>
                <label class="block text-xs font-bold text-gray-700 mb-2 uppercase tracking-wide">
                  üì± Barcode Scan
                </label>
                <input type="text" 
                       name="barcode" 
                       id="barcode" 
                       value="{{ barcode }}"
                       placeholder="Scan or enter barcode"
                       {% if not source_id %}disabled{% endif %}
                       class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 bg-white text-sm font-medium text-gray-900 focus:border-black focus:ring-2 focus:ring-black focus:ring-opacity-10 transition-all outline-none disabled:bg-gray-100 disabled:text-gray-400 disabled:cursor-not-allowed">
              </div>

              <!-- Search -->
              <div>
                <label class="block text-xs font-bold text-gray-700 mb-2 uppercase tracking-wide">
                  üîé Product Search
                </label>
                <input type="text" 
                       name="q" 
                       id="searchq" 
                       value="{{ q }}"
                       placeholder="Search by product name"
                       {% if not source_id %}disabled{% endif %}
                       class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 bg-white text-sm font-medium text-gray-900 focus:border-black focus:ring-2 focus:ring-black focus:ring-opacity-10 transition-all outline-none disabled:bg-gray-100 disabled:text-gray-400 disabled:cursor-not-allowed">
              </div>

              <!-- Submit Button -->
              <div class="md:col-span-2 flex justify-end">
                <button type="submit" 
                        id="findBtn"
                        {% if not source_id %}disabled{% endif %}
                        class="px-6 py-3 rounded-lg bg-black text-white text-sm font-bold hover:bg-gray-800 transition-all shadow-sm disabled:bg-gray-300 disabled:cursor-not-allowed">
                  üîé Find Products
                </button>
              </div>
            </div>
          </form>
        </div>

        <!-- Transfer Cart -->
        {% if cart_count > 0 %}
        <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl shadow-sm border-2 border-green-200 overflow-hidden">
          <div class="px-6 py-4 border-b-2 border-green-200 bg-white flex items-center justify-between">
            <h2 class="text-base font-bold text-gray-900 flex items-center gap-2">
              üõí Transfer List
              <span class="ml-2 text-xs font-semibold px-3 py-1 rounded-full bg-green-600 text-white">
                {{ cart_count }} items
              </span>
            </h2>
            <form method="post" action="{{ app_url }}/admin/stock/transfer/clear-cart" style="display:inline;">
              <input type="hidden" name="_token" value="{{ csrf_token }}">
              <button type="submit" 
                      class="text-xs font-bold text-red-600 hover:text-red-700 transition-colors">
                Clear All
              </button>
            </form>
          </div>
          <div class="p-6">
            <div class="space-y-3 mb-6">
              {% for item in cart_items %}
              <div class="flex gap-4 items-center p-4 bg-white rounded-lg border-2 border-green-100">
                {% if item.image_path %}
                  <img src="{{ item.image_path }}" 
                       alt="{{ item.name }}" 
                       class="w-16 h-16 rounded-lg object-cover border-2 border-white shadow-sm" />
                {% else %}
                  <div class="w-16 h-16 rounded-lg bg-gray-200 border-2 border-white shadow-sm flex items-center justify-center">
                    <svg class="w-8 h-8 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                  </div>
                {% endif %}
                <div class="flex-1">
                  <p class="font-bold text-gray-900">{{ item.name }}</p>
                  <p class="text-xs text-gray-500 mt-1">SKU: {{ item.sku ?? 'N/A' }}</p>
                </div>
                <div class="text-right">
                  <p class="text-lg font-bold text-green-600">{{ item.cart_quantity }}</p>
                  <p class="text-xs text-gray-500">units</p>
                </div>
                <form method="post" action="{{ app_url }}/admin/stock/transfer/remove-from-cart">
                  <input type="hidden" name="_token" value="{{ csrf_token }}">
                  <input type="hidden" name="product_id" value="{{ item.id }}">
                  <button type="submit" 
                          class="px-3 py-2 rounded-lg bg-red-50 text-red-600 text-xs font-bold hover:bg-red-100 transition-all">
                    Remove
                  </button>
                </form>
              </div>
              {% endfor %}
            </div>

            <!-- Bulk Transfer Form -->
            <form method="post" action="{{ app_url }}/admin/stock/transfer/bulk-transfer" class="border-t-2 border-green-200 pt-6">
              <input type="hidden" name="_token" value="{{ csrf_token }}">
              
              <div class="mb-6">
                <label class="block text-xs font-bold text-gray-700 mb-2 uppercase tracking-wide">
                  üè™ Destination Shop
                </label>
                <select name="dest_id"
                        required
                        class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 bg-white text-sm font-medium text-gray-900 focus:border-black focus:ring-2 focus:ring-black focus:ring-opacity-10 transition-all outline-none">
                  <option value="">Select destination shop...</option>
                  {% for s in stores %}
                    {% if s.id != source_id %}
                      <option value="{{ s.id }}" {% if s.id == dest_id %}selected{% endif %}>{{ s.name }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>

              <div class="flex justify-end">
                <button type="submit" 
                        class="px-8 py-4 rounded-lg bg-green-600 text-white text-base font-bold hover:bg-green-700 transition-all shadow-lg">
                  ‚úì Complete Transfer ({{ cart_count }} items)
                </button>
              </div>
            </form>
          </div>
        </div>
        {% endif %}

        <!-- Error Message -->
        {% if barcode and not selected %}
        <div class="bg-red-50 rounded-xl border-2 border-red-200 p-6">
          <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-red-600 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-bold text-red-900 mb-1">Product Not Found</h3>
              <p class="text-sm text-red-700">
                {{ error_detail|raw }}
              </p>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Selected Product - Add to Cart -->
        {% if selected %}
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 border-b-2 border-gray-200 bg-gray-50">
            <h2 class="text-base font-bold text-gray-900 flex items-center gap-2">
              üì¶ Add to Transfer List
            </h2>
          </div>
          <div class="p-6">
            <div class="flex gap-4 items-center p-4 bg-gray-50 rounded-lg border border-gray-200 mb-6">
              {% set img = (selected.image_path ?? null) %}
              {% if img %}
                <img src="{{ img }}" 
                     alt="{{ selected.name }}" 
                     class="w-20 h-20 rounded-lg object-cover border-2 border-white shadow-sm" />
              {% else %}
                <div class="w-20 h-20 rounded-lg bg-gray-200 border-2 border-white shadow-sm flex items-center justify-center">
                  <svg class="w-10 h-10 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                  </svg>
                </div>
              {% endif %}
              <div class="flex-1">
                <p class="text-lg font-bold text-gray-900">{{ selected.name }}</p>
                <p class="text-xs text-gray-500 mt-1">SKU: {{ selected.sku ?? 'N/A' }}</p>
                <p class="text-sm text-gray-700 mt-2 font-semibold">
                  Available: <span class="text-green-600">{{ selected.available ?? 0 }}</span> units
                </p>
              </div>
            </div>

            <form method="post" action="{{ app_url }}/admin/stock/transfer/add-to-cart">
              <input type="hidden" name="_token" value="{{ csrf_token }}">
              <input type="hidden" name="product_id" value="{{ selected.id }}">
              <input type="hidden" name="source_id" value="{{ source_id }}">
              
              <div class="mb-6">
                <label class="block text-xs font-bold text-gray-700 mb-2 uppercase tracking-wide">
                  üî¢ Quantity to Add
                </label>
                <input type="number" 
                       name="quantity" 
                       value="1" 
                       min="1"
                       max="{{ selected.available ?? 0 }}"
                       class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 bg-white text-base font-bold text-gray-900 focus:border-black focus:ring-2 focus:ring-black focus:ring-opacity-10 transition-all outline-none">
              </div>

              <div class="flex justify-end gap-3">
                <button type="submit" 
                        class="px-8 py-3 rounded-lg bg-black text-white text-sm font-bold hover:bg-gray-800 transition-all shadow-sm">
                  ‚ûï Add to Transfer List
                </button>
              </div>
            </form>
          </div>
        </div>
        {% endif %}

        <!-- Search Results -->
        {% if results and results|length > 0 %}
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 border-b-2 border-gray-200 bg-gray-50">
            <h2 class="text-base font-bold text-gray-900 flex items-center gap-2">
              üì¶ Search Results
              <span class="ml-auto text-xs font-semibold px-3 py-1 rounded-full bg-black text-white">
                {{ results|length }} found
              </span>
            </h2>
          </div>
          <div class="p-6 grid grid-cols-1 gap-4">
            {% for r in results %}
            <div class="border-2 border-gray-200 rounded-lg p-4 hover:border-gray-300 transition-all">
              <div class="flex gap-4 items-start mb-4">
                {% if r.image_path %}
                  <img src="{{ r.image_path }}" 
                       alt="{{ r.name }}" 
                       class="w-16 h-16 rounded-md object-cover border-2 border-gray-100" />
                {% else %}
                  <div class="w-16 h-16 rounded-md bg-gray-100 border-2 border-gray-200 flex items-center justify-center flex-shrink-0">
                    <svg class="w-8 h-8 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                  </div>
                {% endif %}
                <div class="flex-1">
                  <p class="font-bold text-gray-900">{{ r.name }}</p>
                  <p class="text-xs text-gray-500 mt-1">Available: <span class="font-semibold text-green-600">{{ r.available ?? 0 }}</span> units</p>
                </div>
              </div>

              <!-- Quick Add to Cart -->
              <form method="post" action="{{ app_url }}/admin/stock/transfer/add-to-cart" class="flex items-end gap-3">
                <input type="hidden" name="_token" value="{{ csrf_token }}">
                <input type="hidden" name="product_id" value="{{ r.id }}">
                <input type="hidden" name="source_id" value="{{ source_id }}">
                
                <div class="flex-1">
                  <label class="block text-xs font-bold text-gray-700 mb-1">Quantity</label>
                  <input type="number" 
                         name="quantity" 
                         value="1" 
                         min="1"
                         class="w-full px-3 py-2 rounded-lg border-2 border-gray-300 bg-white text-sm font-semibold text-gray-900 focus:border-black focus:ring-2 focus:ring-black focus:ring-opacity-10 transition-all outline-none">
                </div>

                <button type="submit" 
                        class="px-5 py-2 rounded-lg bg-black text-white text-xs font-bold hover:bg-gray-800 transition-all">
                  Add to List
                </button>
              </form>
            </div>
            {% endfor %}
          </div>
        </div>
        {% endif %}
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Instructions Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-base font-bold text-gray-900 mb-4 flex items-center gap-2">
            üìã How It Works
          </h3>
          <ol class="space-y-3 text-sm text-gray-700">
            <li class="flex gap-3">
              <span class="flex items-center justify-center w-6 h-6 rounded-full bg-black text-white text-xs font-bold flex-shrink-0">1</span>
              <span>Select the source shop where products are currently located</span>
            </li>
            <li class="flex gap-3">
              <span class="flex items-center justify-center w-6 h-6 rounded-full bg-black text-white text-xs font-bold flex-shrink-0">2</span>
              <span>Scan barcodes or search to add multiple products to transfer list</span>
            </li>
            <li class="flex gap-3">
              <span class="flex items-center justify-center w-6 h-6 rounded-full bg-black text-white text-xs font-bold flex-shrink-0">3</span>
              <span>Review your transfer list and select destination shop</span>
            </li>
            <li class="flex gap-3">
              <span class="flex items-center justify-center w-6 h-6 rounded-full bg-black text-white text-xs font-bold flex-shrink-0">4</span>
              <span>Click "Complete Transfer" to process all items at once</span>
            </li>
          </ol>
        </div>

        <!-- Tips Card -->
        <div class="bg-gray-900 rounded-xl shadow-lg p-6 text-white">
          <h3 class="text-base font-bold mb-4 flex items-center gap-2">
            üí° Pro Tips
          </h3>
          <ul class="space-y-2 text-sm">
            <li class="flex gap-2">
              <span>‚Ä¢</span>
              <span>Add multiple products before transferring for efficiency</span>
            </li>
            <li class="flex gap-2">
              <span>‚Ä¢</span>
              <span>Use barcode scanner for faster product addition</span>
            </li>
            <li class="flex gap-2">
              <span>‚Ä¢</span>
              <span>Check transfer history to track past movements</span>
            </li>
            <li class="flex gap-2">
              <span>‚Ä¢</span>
              <span>All transfers are logged with unique transfer numbers</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  (function(){
    const src = document.getElementById('sourceSel');
    const barcode = document.getElementById('barcode');
    const searchq = document.getElementById('searchq');
    const findBtn = document.getElementById('findBtn');
    const form = document.getElementById('filterForm');
    
    function toggleInputs() {
      const enabled = !!(src && src.value);
      if (barcode) barcode.disabled = !enabled;
      if (searchq) searchq.disabled = !enabled;
      if (findBtn) findBtn.disabled = !enabled;
      if (enabled && barcode) barcode.focus();
    }
    
    if (src) {
      src.addEventListener('change', toggleInputs);
      toggleInputs();
    }
    
    if (barcode && form) {
      barcode.addEventListener('keydown', function(e){
        if (e.key === 'Enter') {
          e.preventDefault();
          form.submit();
        }
      });
    }
  })();
</script>
{% endblock %}