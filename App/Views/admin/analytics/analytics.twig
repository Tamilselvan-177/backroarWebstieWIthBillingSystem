{% extends 'base.twig' %}

{% block title %}Analytics Dashboard{% endblock %}

{% block content %}
<section class="py-8 bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4">
        
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div class="flex items-center gap-4">
                <a href="{{ app_url }}/admin" class="w-10 h-10 bg-white rounded-xl flex items-center justify-center hover:bg-gray-100 transition shadow-sm">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </a>
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Analytics Dashboard</h1>
                    <p class="text-sm text-gray-600 mt-1">Real-time insights and performance metrics</p>
                </div>
            </div>
            <div class="text-sm text-gray-500">
                Last updated: <span class="font-semibold">{{ "now"|date("h:i A") }}</span>
            </div>
        </div>

        <!-- Key Metrics -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <!-- Today's Revenue -->
            <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl p-6 text-white shadow-lg">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-sm font-medium opacity-90">Today's Revenue</h3>
                    <div class="w-10 h-10 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                </div>
                <p class="text-3xl font-bold mb-2">‚Çπ{{ analytics.today_revenue|number_format(0, '.', ',') }}</p>
                <div class="flex items-center gap-2 text-sm">
                    {% if analytics.revenue_growth >= 0 %}
                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-green-500 bg-opacity-20 rounded-full">
                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"/>
                            </svg>
                            +{{ analytics.revenue_growth }}%
                        </span>
                    {% else %}
                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-red-500 bg-opacity-20 rounded-full">
                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M12 13a1 1 0 100 2h5a1 1 0 001-1V9a1 1 0 10-2 0v2.586l-4.293-4.293a1 1 0 00-1.414 0L8 9.586 3.707 5.293a1 1 0 00-1.414 1.414l5 5a1 1 0 001.414 0L11 9.414 14.586 13H12z" clip-rule="evenodd"/>
                            </svg>
                            {{ analytics.revenue_growth }}%
                        </span>
                    {% endif %}
                    <span class="opacity-75">vs yesterday</span>
                </div>
            </div>

            <!-- Today's Orders -->
            <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl p-6 text-white shadow-lg">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-sm font-medium opacity-90">Orders Today</h3>
                    <div class="w-10 h-10 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"/>
                        </svg>
                    </div>
                </div>
                <p class="text-3xl font-bold mb-2">{{ analytics.today_orders }}</p>
                <div class="flex items-center gap-2 text-sm">
                    {% if analytics.orders_growth >= 0 %}
                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-green-500 bg-opacity-20 rounded-full">
                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"/>
                            </svg>
                            +{{ analytics.orders_growth }}%
                        </span>
                    {% else %}
                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-red-500 bg-opacity-20 rounded-full">
                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M12 13a1 1 0 100 2h5a1 1 0 001-1V9a1 1 0 10-2 0v2.586l-4.293-4.293a1 1 0 00-1.414 0L8 9.586 3.707 5.293a1 1 0 00-1.414 1.414l5 5a1 1 0 001.414 0L11 9.414 14.586 13H12z" clip-rule="evenodd"/>
                            </svg>
                            {{ analytics.orders_growth }}%
                        </span>
                    {% endif %}
                    <span class="opacity-75">vs yesterday</span>
                </div>
            </div>

            <!-- Average Order Value -->
            <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-2xl p-6 text-white shadow-lg">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-sm font-medium opacity-90">Avg Order Value</h3>
                    <div class="w-10 h-10 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                </div>
                <p class="text-3xl font-bold mb-2">‚Çπ{{ analytics.avg_transaction.avg_order_value|number_format(0, '.', ',') }}</p>
                <div class="text-sm opacity-75">
                    From {{ analytics.avg_transaction.total_orders }} orders
                </div>
            </div>

            <!-- Peak Hour -->
            <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl p-6 text-white shadow-lg">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-sm font-medium opacity-90">Peak Hour Today</h3>
                    <div class="w-10 h-10 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                </div>
                <p class="text-3xl font-bold mb-2">{{ analytics.peak_hour.hour }}:00</p>
                <div class="text-sm opacity-75">
                    {{ analytics.peak_hour.orders }} orders this hour
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
            
            <!-- Revenue Trend Chart -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
                <h3 class="text-lg font-bold text-gray-900 mb-4">Revenue Trend (Last 7 Days)</h3>
                <div class="space-y-3">
                    {% set maxRevenue = 0 %}
                    {% for day in analytics.revenue_trend %}
                        {% if day.revenue > maxRevenue %}
                            {% set maxRevenue = day.revenue %}
                        {% endif %}
                    {% endfor %}
                    
                    {% for day in analytics.revenue_trend %}
                        <div>
                            <div class="flex items-center justify-between text-sm mb-1">
                                <span class="font-medium text-gray-700">{{ day.day_name }}</span>
                                <span class="font-bold text-gray-900">‚Çπ{{ day.revenue|number_format(0, '.', ',') }}</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                                <div class="bg-gradient-to-r from-blue-500 to-purple-500 h-full rounded-full transition-all duration-500" 
                                     style="width: {{ maxRevenue > 0 ? (day.revenue / maxRevenue * 100) : 0 }}%">
                                </div>
                            </div>
                            <div class="flex items-center justify-between text-xs text-gray-500 mt-1">
                                <span>{{ day.orders }} orders</span>
                                <span>GST: ‚Çπ{{ day.gst|number_format(0, '.', ',') }}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Payment Methods -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
                <h3 class="text-lg font-bold text-gray-900 mb-4">Payment Methods (Today)</h3>
                {% if analytics.payment_methods is empty %}
                    <p class="text-gray-500 text-center py-8">No transactions today</p>
                {% else %}
                    <div class="space-y-4">
                        {% set totalPayments = 0 %}
                        {% for method in analytics.payment_methods %}
                            {% set totalPayments = totalPayments + method.count %}
                        {% endfor %}
                        
                        {% for method in analytics.payment_methods %}
                            <div>
                                <div class="flex items-center justify-between mb-2">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-lg {% if method.method == 'Cash' %}bg-green-100{% elseif method.method == 'Card' %}bg-blue-100{% elseif method.method == 'UPI' %}bg-purple-100{% else %}bg-gray-100{% endif %} flex items-center justify-center">
                                            <span class="text-lg">
                                                {% if method.method == 'Cash' %}üíµ
                                                {% elseif method.method == 'Card' %}üí≥
                                                {% elseif method.method == 'UPI' %}üì±
                                                {% else %}üîÄ{% endif %}
                                            </span>
                                        </div>
                                        <div>
                                            <p class="font-semibold text-gray-900">{{ method.method }}</p>
                                            <p class="text-xs text-gray-500">{{ method.count }} transactions</p>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <p class="font-bold text-gray-900">‚Çπ{{ method.total|number_format(0, '.', ',') }}</p>
                                        <p class="text-xs text-gray-500">{{ ((method.count / totalPayments) * 100)|number_format(1) }}%</p>
                                    </div>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2">
                                    <div class="{% if method.method == 'Cash' %}bg-green-500{% elseif method.method == 'Card' %}bg-blue-500{% elseif method.method == 'UPI' %}bg-purple-500{% else %}bg-gray-500{% endif %} h-full rounded-full" 
                                         style="width: {{ (method.count / totalPayments * 100) }}%">
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
            
            <!-- Top Products -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
                <h3 class="text-lg font-bold text-gray-900 mb-4">Top Selling Products (7 Days)</h3>
                <div class="space-y-3">
                    {% for product in analytics.top_products %}
                        <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg transition">
                            <div class="flex items-center gap-3 flex-1 min-w-0">
                                <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-500 rounded-lg flex items-center justify-center text-white font-bold text-sm flex-shrink-0">
                                    {{ loop.index }}
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="font-medium text-gray-900 truncate">{{ product.name }}</p>
                                    <p class="text-xs text-gray-500">{{ product.total_sold }} units sold</p>
                                </div>
                            </div>
                            <div class="text-right flex-shrink-0 ml-4">
                                <p class="font-bold text-gray-900">‚Çπ{{ product.revenue|number_format(0, '.', ',') }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Store Performance -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
                <h3 class="text-lg font-bold text-gray-900 mb-4">Store Performance (Today)</h3>
                {% if analytics.store_performance is empty %}
                    <p class="text-gray-500 text-center py-8">No sales today</p>
                {% else %}
                    <div class="space-y-4">
                        {% for store in analytics.store_performance %}
                            <div class="p-4 bg-gradient-to-r from-gray-50 to-white rounded-xl border border-gray-200">
                                <div class="flex items-center justify-between mb-2">
                                    <div>
                                        <p class="font-bold text-gray-900">{{ store.store_name }}</p>
                                        <p class="text-xs text-gray-500">Code: {{ store.store_code }}</p>
                                    </div>
                                    <div class="text-right">
                                        <p class="text-2xl font-bold text-gray-900">‚Çπ{{ store.revenue|number_format(0, '.', ',') }}</p>
                                    </div>
                                </div>
                                <div class="grid grid-cols-2 gap-3 mt-3">
                                    <div class="bg-white p-2 rounded-lg border border-gray-100">
                                        <p class="text-xs text-gray-500">Orders</p>
                                        <p class="text-lg font-bold text-gray-900">{{ store.orders }}</p>
                                    </div>
                                    <div class="bg-white p-2 rounded-lg border border-gray-100">
                                        <p class="text-xs text-gray-500">Avg Order</p>
                                        <p class="text-lg font-bold text-gray-900">‚Çπ{{ store.avg_order|number_format(0) }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

        </div>

        <!-- Hourly Sales & Low Stock -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            
            <!-- Hourly Sales Pattern -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
                <h3 class="text-lg font-bold text-gray-900 mb-6">Hourly Sales Pattern (Today)</h3>
                <div class="flex items-end justify-between gap-2 h-48">
                    {% set maxHourlySales = 0 %}
                    {% for hour in analytics.hourly_sales %}
                        {% if hour.revenue > maxHourlySales %}
                            {% set maxHourlySales = hour.revenue %}
                        {% endif %}
                    {% endfor %}
                    
                    {% for i in 0..23 %}
                        {% set hourData = null %}
                        {% for hour in analytics.hourly_sales %}
                            {% if hour.hour == i %}
                                {% set hourData = hour %}
                            {% endif %}
                        {% endfor %}
                        
                        <div class="flex-1 flex flex-col items-center gap-2 group">
                            <div class="relative w-full">
                                {% if hourData %}
                                    <div class="bg-gradient-to-t from-blue-500 to-purple-500 rounded-t-lg transition-all duration-300 hover:from-blue-600 hover:to-purple-600 cursor-pointer" 
                                         style="height: {{ maxHourlySales > 0 ? (hourData.revenue / maxHourlySales * 180) : 4 }}px"
                                         title="‚Çπ{{ hourData.revenue|number_format(0) }} - {{ hourData.orders }} orders">
                                    </div>
                                {% else %}
                                    <div class="bg-gray-200 rounded-t-lg" style="height: 4px"></div>
                                {% endif %}
                            </div>
                            <span class="text-[10px] text-gray-500 font-medium">{{ i }}</span>
                        </div>
                    {% endfor %}
                </div>
                <div class="mt-4 pt-4 border-t border-gray-200 text-center text-xs text-gray-500">
                    Hover over bars to see details
                </div>
            </div>

            <!-- Low Stock Alerts -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
                <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                    <span>‚ö†Ô∏è</span> Low Stock Alerts
                </h3>
                {% if analytics.low_stock is empty %}
                    <p class="text-gray-500 text-center py-8">All products well stocked!</p>
                {% else %}
                    <div class="space-y-2">
                        {% for item in analytics.low_stock %}
                            <div class="flex items-center justify-between p-3 rounded-lg border border-gray-200 hover:border-red-300 hover:bg-red-50 transition">
                                <div class="flex-1 min-w-0">
                                    <p class="font-medium text-gray-900 truncate">{{ item.name }}</p>
                                    <p class="text-xs text-gray-500">{{ item.store_name }}</p>
                                </div>
                                <div class="flex items-center gap-2">
                                    <span class="px-3 py-1 bg-red-100 text-red-800 text-sm font-bold rounded-full">
                                        {{ item.stock_quantity }} left
                                    </span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

        </div>

    </div>
</section>
{% endblock %}
