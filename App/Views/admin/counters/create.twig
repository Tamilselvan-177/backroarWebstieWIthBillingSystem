{% extends "base.twig" %}
{% block title %}Add Counter{% endblock %}
{% block content %}
<section class="py-8 bg-gray-50 min-h-screen">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto">
      
      <!-- Header -->
      <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Add New Counter</h1>
        <p class="text-sm text-gray-600 mt-1">Create a new POS counter for your store</p>
      </div>

      <!-- Form Card -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
        <form method="post" action="{{ app_url }}/admin/counters/store" class="space-y-6">
          <input type="hidden" name="_token" value="{{ csrf_token }}">
          
          <!-- Counter Information Section -->
          <div>
            <h2 class="text-sm font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-100">
              Counter Information
            </h2>
            
            <div class="space-y-4">
              <!-- Store Selection -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Store Location <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                  <select 
                    name="store_id" 
                    required
                    class="w-full px-4 py-3 pr-10 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent transition appearance-none"
                  >
                    <option value="">Select a store</option>
                    {% for s in stores %}
                      <option value="{{ s.id }}">{{ s.code }} â€” {{ s.name }}</option>
                    {% endfor %}
                  </select>
                  <div class="absolute inset-y-0 right-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </div>
                </div>
              </div>

              <!-- Code & Name -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Counter Code <span class="text-red-500">*</span>
                  </label>
                  <input 
                    type="text" 
                    name="code" 
                    required
                    placeholder="e.g., C1, C2"
                    class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent transition font-mono"
                  >
                  <p class="text-xs text-gray-500 mt-1.5">Short identifier for the counter</p>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Counter Name <span class="text-red-500">*</span>
                  </label>
                  <input 
                    type="text" 
                    name="name" 
                    required
                    placeholder="e.g., Main Counter"
                    class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent transition"
                  >
                  <p class="text-xs text-gray-500 mt-1.5">Descriptive name for the counter</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Security Section -->
          <div>
            <h2 class="text-sm font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-100">
              Security PIN
            </h2>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                4-Digit PIN <span class="text-red-500">*</span>
              </label>
              <div class="relative">
                <input 
                  type="password" 
                  name="pin" 
                  id="pin"
                  required
                  minlength="4"
                  maxlength="6"
                  placeholder="Enter 4-6 digit PIN"
                  class="w-full px-4 py-3 pr-12 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent transition font-mono text-lg tracking-widest"
                >
                <button 
                  type="button" 
                  onclick="togglePin()"
                  class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition"
                >
                  <svg id="pinIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                </button>
              </div>
              
              <!-- PIN Info Box -->
              <div class="mt-3 bg-amber-50 rounded-lg p-3 border border-amber-200">
                <div class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-amber-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <div class="flex-1">
                    <p class="text-xs font-medium text-amber-900 mb-1">Important Security Note</p>
                    <p class="text-xs text-amber-800">
                      This PIN will be used by staff to access this counter. Keep it secure and change it regularly for better security.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex gap-3 pt-4 border-t border-gray-100">
            <button 
              type="submit" 
              class="flex-1 md:flex-none px-8 py-3 bg-black text-white rounded-xl hover:bg-gray-800 transition font-medium shadow-sm hover:shadow"
            >
              Create Counter
            </button>
            <a 
              href="{{ app_url }}/admin/counters" 
              class="flex-1 md:flex-none px-8 py-3 border border-gray-300 text-gray-700 rounded-xl hover:bg-gray-50 transition font-medium text-center"
            >
              Cancel
            </a>
          </div>
        </form>
      </div>

      <!-- Help Text -->
      <div class="mt-4 text-center">
        <p class="text-sm text-gray-500">
          Staff will use the counter code and PIN to access the POS system
        </p>
      </div>
    </div>
  </div>
</section>

<script>
function togglePin() {
  const input = document.getElementById('pin');
  const icon = document.getElementById('pinIcon');
  
  if (input.type === 'password') {
    input.type = 'text';
    icon.innerHTML = `
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
    `;
  } else {
    input.type = 'password';
    icon.innerHTML = `
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
    `;
  }
}
</script>
{% endblock %}